@{
    ViewData["Title"] = "Restaurante";
}

<style>
    body {
        background-image: url('https://st3.depositphotos.com/1000336/13275/i/600/depositphotos_132754102-stock-photo-restaurant-blurred-background.jpg');
        background-size: cover;
    }
    
    .jumbotron {
        background-color: rgba(255,255,255,0.7);
        padding: 50px;
        margin-top: 50px;
    }
    
    h1, h2, h3, p {
        color: #fff;
        text-shadow: 2px 2px 2px #000;
    }
    
    .menu-section {
        background-color: rgba(255,255,255,0.8);
        padding: 30px;
        margin-top: 50px;
    }
    
    footer {
        background-color: #fff;
        color: #777;
        padding: 10px;
        margin-top: 50px;
    }
</style>

<div class="jumbotron text-center">
    <h1 class="display-4">Bienvenidos a nuestro restaurante</h1>
    <p class="lead">Disfruta de nuestra deliciosa comida en un ambiente acogedor</p>
</div>

<section class="container menu-section">
    <h2>Nuestro menú</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Entradas</h3>
            <ul>
                <li>Pozole</li>
                <li>Sopa de Tortilla</li>
                <li>Ensalada</li>
                <li>Sopes</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Platos principales</h3>
            <ul>
                <li>Enchiladas</li>
                <li>Chiles Poblanos Rellenos</li>
                <li>Quesadillas</li>
                <li>Arroz con Pollo</li>
            </ul>
        </div>
        <div>
            <p>Nuestros precios son accesibles</p>
        </div>
</section>

<section class="container menu-section">
    <h2>Haz tu Reservación</h2>
    <div class="col-md-6">
        <p style="color: white;">Telefono: 833-555-55-55</p>
        <p style="color: white;">Email: restaurante_proyecto@uat.com.mx</p>
        <p>Nos encontramos en 4ta avenida Col. Americana 201</p>
    </div>
</section>

<footer class="text-center">
    <p>Todos los derechos reservados © Restaurante 2023</p>
</footer>
